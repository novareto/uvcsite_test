<html>
<head>
</head>
<body>
<div tal:define="url python: view.url(context)">
 <h1> Mitbenutzerverwaltung </h1>                                                                                        
 <fieldset>
 <legend > Benutzer </legend>
  <div>


  <table id="cousers">
      <tr>
          <th> Mitbenutzer </th>
          <th> Berechtigung </th>
      </tr>
      <tr tal:repeat="user view/getUserGroup">
          <td>
              <img src="/@@//uvc.skin/user.png">
              <a href="" 
                 i18n:translate=""
                 tal:attributes="href string:${url}/enmsupdateuser?cn=${user/mnr}">
                 <span i18n:name="updateUser" tal:content="string: ${user/mnr}"> user updaten </span>
              </a>
          </td>    
          <td>
            <span tal:content="python: view.displayRoles(user.get('rollen', []))"/>
          </td>
      </tr>
      <tr>
        <td colspan="2"> 
         <a href="" 
            i18n:translate=""
            tal:attributes="href string:${url}/enmscreateuser">
            <span i18n:name="neuenUseranlegen" tal:replace="string: neuen User anlegen"> Mitbenutzer erstellen </span>
         </a>
        </td>
      </tr>
              
  </table>  

</div>
</fieldset>
</div>
</body>
</html>

