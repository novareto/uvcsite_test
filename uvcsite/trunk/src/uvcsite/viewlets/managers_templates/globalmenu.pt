<div class="main-menu"
    tal:define="tabs viewletmanager/viewlets"
    tal:condition="tabs">
    <img src="" alt="Extranet"
         tal:attributes="src python: viewletmanager.view.application_url()+'/@@/styles/main-menu-bg.gif'"/>
    <ul>
       <rep tal:repeat="tab tabs">
         <li tal:define="index repeat/tab/index" 
             tal:attributes="class python: viewletmanager.getClass(index)">
             <span tal:replace="structure tab/render"> </span>
         </li>
       </rep>
    </ul>
</div>    
