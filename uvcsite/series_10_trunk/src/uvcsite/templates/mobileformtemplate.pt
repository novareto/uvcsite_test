<form action="." method="POST" tal:attributes="action view/form_url; id view/id|view/__name__">
  <div data-role="fieldcontain" tal:repeat="widget view/fieldWidgets">
    <label tal:attributes="for widget/htmlId"> 
      <span tal:replace="widget/title"> </span>
    </label>
    <input tal:replace="structure widget/render" />
  </div>
  <span class="action" tal:repeat="widget view/actionWidgets">
    <tal:widget tal:content="structure widget/render" />
  </span>
</form>
