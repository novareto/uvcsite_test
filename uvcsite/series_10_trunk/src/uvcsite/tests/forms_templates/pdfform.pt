<div tal:define="data view/data">
  <style>
    table#resulttable th {width:200px;}
  </style>

  <div tal:condition="not: data">
      <metal:block use-macro="macro:editform"/>
  </div>

  <div tal:condition="data">
  <h1> Ergebnisse </h1>
    <table id="resulttable">
      <tr>
        <th> Name </th>
        <td tal:content="data/name"/>
      </tr>
      <tr>
        <th> Vorname </th>
        <td tal:content="data/vorname"/>
      </tr>
      <tr>
        <th> Geschlecht </th>
        <td tal:content="data/geschlecht"/>
      </tr>
      <tr>
        <th> Datum </th>
        <td tal:content="data/datum"/>
      </tr>
    </table>
  </div>
</div>
